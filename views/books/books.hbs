<div class="container">
  <a href="/books/create" class="btn btn-primary mt-4">Create new book</a>
  <div class="row text-center mt-5">

    {{#each books}}
    <div class="col-sm-12 col-md-4">
      
      <div class="product">
        <a href="/books/{{this.slug}}"><img class="image" src="{{this.avatar}}" alt=""></a>
        <h4 class="name">{{this.name}}</h4>
        <p class="author">{{this.author}}</p>
        <div class="price-sale">
            <span class="price-final">{{this.finalPrice}}.000đ</span>
            <span class="saleOff">-{{this.saleOff}}%</span>
            <p class="priceRegular">{{this.priceRegular}}.000đ</p>
        </div>
        <a href="#" class="btn btn-info">Add To Cart</a>
      </div>

    </div>
    {{/each}}


  </div>
</div>


