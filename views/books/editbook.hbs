<div class="container">
    <h3 class="mx-4">Sửa Thông Tin Sách</h3>
    <div class="row">
        <div class="col-8 offset-2">

            <form method="POST" action='/books/{{book._id}}?_method=PUT'>

                <div class="form-group">
                    <label for="name">Tên Sách</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{book.name}}" >
                </div>
                <div class="form-group">
                    <label for="name">Tác Giả</label>
                    <input type="text" class="form-control" id="name" name="author" value="{{book.author}}" >
                </div>
                <div class="form-group">
                    <label for="avatar">Hình Mô Tả</label>
                    <input type="text" class="form-control" id="avatar" name="avatar" value="{{book.avatar}}" >
                </div>
                <div class="form-group">
                    <label for="priceRegular">Giá Bìa</label>
                    <input type="number" class="form-control" id="priceRegular" name="priceRegular" value="{{book.priceRegular}}" >
                </div>
                <div class="form-group">
                    <label for="saleOff">Sale Off</label>
                    <input type="number" class="form-control" id="saleOff" name="saleOff" value="{{book.saleOff}}" >
                </div>
                <div class="form-group">
                    <label for="finalPrice">Giá Cuối Cùng</label>
                    <input type="number" class="form-control" id="finalPrice" name="finalPrice" value="{{book.finalPrice}}" >
                </div>

                <button type="submit" class="btn btn-primary">Lưu lại</button>
            </form>

        </div>
    </div>
</div>


